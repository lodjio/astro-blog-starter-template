---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />

		<!-- Comfortaa -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@400;500;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<Header />
		<main class="landing">
			<section class="hero">
				<div class="hero-inner">

					<!-- TEXT LOGO WITH GLOW -->
					<h1 class="logo">lodj.io</h1>

					<p class="tagline">
						Travel supply, rebuilt from the ground up. lodj.io is in stealth mode and counting down to launch.
					</p>

					<div class="countdown" id="countdown">
						<div class="unit">
							<div class="value" id="days">0</div>
							<div class="label">Days</div>
						</div>
						<div class="unit">
							<div class="value" id="hours">00</div>
							<div class="label">Hours</div>
						</div>
						<div class="unit">
							<div class="value" id="minutes">00</div>
							<div class="label">Minutes</div>
						</div>
						<div class="unit">
							<div class="value" id="seconds">00</div>
							<div class="label">Seconds</div>
						</div>
					</div>

					<p class="subtext">
						Target launch date: 1 June 2028
					</p>
				</div>
			</section>

			<section class="info">
				<div class="info-inner">
					<h2>What is lodj.io</h2>
					<p>
						lodj.io is a travel infrastructure project focused on clean connectivity, transparent economics and
						performance driven distribution. No mystery markups, no foggy marketplace logic, no games.
					</p>
					<p>
						We are building a supply first platform for partners who care about control, clarity and speed.
						Signage is minimal for now. The work is happening behind the scenes until launch.
					</p>
					<p class="note">
						This site will evolve as we get closer to launch. For now, treat this as a simple status board.
					</p>
				</div>
			</section>
		</main>
		<Footer />

		<style>
			:root {
				color-scheme: dark;
			}

			body {
				margin: 0;
				min-height: 100vh;
				display: flex;
				flex-direction: column;
				background: #0B2CFF;
				color: #ffffff;
				font-family: "Comfortaa", sans-serif;
			}

			main.landing {
				flex: 1;
				display: flex;
				flex-direction: column;
			}

			.hero {
				display: flex;
				align-items: center;
				justify-content: center;
				padding: 4rem 1.5rem 2rem;
				text-align: center;
			}

			.hero-inner {
				max-width: 720px;
				margin: 0 auto;
			}

			/* TEXT LOGO WITH GLOW */
			.logo {
				font-size: clamp(2.8rem, 6vw, 3.8rem);
				font-weight: 700;
				letter-spacing: 0.10em;
				text-transform: lowercase;
				color: #ffffff;
				margin-bottom: 1rem;

				text-shadow:
					0 0 10px rgba(255, 255, 255, 0.8),
					0 0 20px rgba(255, 255, 255, 0.6),
					0 0 35px rgba(255, 255, 255, 0.4),
					0 0 50px rgba(255, 255, 255, 0.3);
			}

			.tagline {
				font-size: 1rem;
				max-width: 560px;
				margin: 0 auto 2.5rem;
				opacity: 0.95;
			}

			.countdown {
				display: flex;
				justify-content: center;
				flex-wrap: wrap;
				gap: 1rem;
				margin-bottom: 1.5rem;
			}

			.unit {
				min-width: 80px;
				padding: 0.75rem 1rem;
				border-radius: 0.9rem;
				border: 1px solid rgba(255, 255, 255, 0.25);
				background: rgba(0, 0, 0, 0.25);
				backdrop-filter: blur(6px);
			}

			.value {
				font-size: 1.8rem;
				font-weight: 700;
			}

			.label {
				font-size: 0.7rem;
				text-transform: uppercase;
				letter-spacing: 0.14em;
				margin-top: 0.25rem;
				opacity: 0.8;
			}

			.subtext {
				font-size: 0.9rem;
				opacity: 0.9;
			}

			.info {
				padding: 2rem 1.5rem 3rem;
			}

			.info-inner {
				max-width: 720px;
				margin: 0 auto;
			}

			.info h2 {
				font-size: 1.4rem;
				margin-bottom: 0.75rem;
			}

			.info p {
				font-size: 0.98rem;
				line-height: 1.6;
				margin-bottom: 0.75rem;
				opacity: 0.95;
			}

			.info .note {
				font-size: 0.9rem;
				opacity: 0.85;
			}

			a {
				color: inherit;
			}
		</style>

		<script>
			const targetDate = new Date('2028-06-01T00:00:00');

			function updateCountdown() {
				const now = new Date();
				const diff = targetDate.getTime() - now.getTime();

				const el = document.getElementById('countdown');
				if (!el) return;

				if (diff <= 0) {
					el.innerHTML = "<div class='subtext'>lodj.io is now live. Refresh to see what we shipped.</div>";
					return;
				}

				const totalSeconds = Math.floor(diff / 1000);
				const days = Math.floor(totalSeconds / (3600 * 24));
				const hours = Math.floor((totalSeconds % (3600 * 24)) / 3600);
				const minutes = Math.floor((totalSeconds % 3600) / 60);
				const seconds = Math.floor(totalSeconds % 60);

				document.getElementById('days').textContent = days;
				document.getElementById('hours').textContent = String(hours).padStart(2, '0');
				document.getElementById('minutes').textContent = String(minutes).padStart(2, '0');
				document.getElementById('seconds').textContent = String(seconds).padStart(2, '0');
			}

			updateCountdown();
			setInterval(updateCountdown, 1000);
		</script>
	</body>
</html>
