---
interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'short',
      day: 'numeric'
    })
  }
</time>

<style>
  time {
    font-family: 'Comfortaa', sans-serif;
    font-size: 0.9rem;
    letter-spacing: 0.02em;
    opacity: 0.85;
  }
</style>
